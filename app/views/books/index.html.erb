<!DOCTYPE html>
<html>
<head>
</head>
<body>
	<% if flash[:notice] %>
		<p class="created-message"><%= flash[:notice] %></p>
	<% end %>
	<h1>Books</h1>
	<table>
		<thead>
			<tr>
				<th>Title</th>
				<th>Body</th>
				<th></th>
			</tr>
		</thead>
	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td>
				<%= book.title %>
			</td>
			<td>
				<%= book.body %>
			</td>
			<td>
				<%= link_to "Show", book_path(book.id) %>
				<%= link_to "Edit", edit_book_path(book.id) %>
				<%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>


<h2>New book</h2>

<%= form_for(@book) do |f| %>
<% if @book.errors.any? %>
<div id="error_explanation" class="alert-danger">
	<ul>
		<% @book.errors.full_messages.each do |message| %>
			<li class="error-message">error <%= message %></li>
			<% end %>
	</ul>
</div>
<% end %>
	<h5>Title</h5>
	<%= f.text_field :title %>
	<h5>Body</h5>
	<%= f.text_area :body %>
	<br><%= f.submit 'Create Book' %>
<% end %>
</body>
</html>