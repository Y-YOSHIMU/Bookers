<!DOCTYPE html>
<html>
<head>
</head>
	<body>
		<h1>Editing Book</h1>
		<%= form_for(@book) do |f| %>
		<% if @book.errors.any? %>
			<div id="error_explanation" class="alert-danger">
			<ul>
				<% @book.errors.full_messages.each do |message| %>
				<li class="error-message">error <%= message %></li>
				<% end %>
			</ul>
			</div>
			<% end %>
			<h4>Title</h4>
			<%= f.text_field :title %>
			<h4>Body</h4>
			<%= f.text_area :body %>
			<br><%= f.submit "Update Book" %>
		<% end %>
		<div class="edit-link">
			<%= link_to "Show", book_path(@book) %>
			<a href="/books">Back</a>
		</div>
	</body>
</html>